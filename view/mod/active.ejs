<%- include('../_partial/header.ejs', { title: 'Active Abuse Monitor' }); %>
<%- include('../_components/frame-top.ejs'); %>
<%- include('../_components/content-start.ejs'); %>
<%- include('../_components/title-box.ejs', { title: "Active Abuse Monitor" }); %>

<%- include('../_components/content-body-start.ejs'); %>
<div style="height: 500px; overflow-y: scroll">
    <% for (const acc of recent) { %>
        <div style="text-align: left">
            <strong>
                <%= acc.id %>
                <a href="/mod/overview/<%= acc.username %>"><%= toDisplayName(acc.username) %></a><br>
            </strong>

            <% if (acc.registration_ip) { %>
                Registration: <a href="/mod/ip/<%= acc.registration_ip %>"><%= acc.registration_ip %></a><br>
            <% } %>
            <% if (acc.ip) { %>
                Last Session: <a href="/mod/ip/<%= acc.ip %>"><%= acc.ip %></a><br>
                UID: <a href="/mod/uid/<%= acc.uid %>"><%= acc.uid %></a>
            <% } %>

            <span style="float: right">
                <%= acc.registration_date.toISOString().replace("T"," ").substring(0, 19); %>
            </span>
        </div>
        <hr>
    <% } %>
</div>
<%- include('../_components/content-body-end.ejs'); %>

<%- include('../_components/content-end.ejs'); %>
<%- include('../_partial/footer.ejs'); %>
