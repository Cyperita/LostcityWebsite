<html>

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= typeof title !== 'undefined' ? title + ' | 2004Scape' : '2004Scape' %></title>

    <link rel="stylesheet" type="text/css" href="/css/mod.css">
</head>

<body class="bg-base-200">
    <div class="bg-base-100">
        <div class="navbar container mx-auto p-4">
            <div class="flex-1">
                <a href="/mod" class="flex flex-row gap-2 w-fit">
                    <img src=/img/lostcity-logo-min.webp class="h-14">

                    <span class="w-[2px] h-auto bg-base-300"></span>

                    <span class="text-2xl font-bold text-stone-300">
                        <p class="">Mod</p>

                        <p class="leading-none font-stretch-110%">Panel</p>
                    </span>
                </a>
            </div>

            <div class="flex-none">
                <ul class="menu menu-horizontal px-1 hidden md:flex">
                    <%- include('nav-menu-items.ejs') %>
                </ul>

                <div class="dropdown dropdown-end">
                    <div tabindex="0" role="button" class="btn btn-ghost md:hidden">
                        <i data-lucide="menu" class="size-6"></i>
                    </div>
                    <ul tabindex="0"
                        class="menu menu-sm dropdown-content bg-base-300 rounded-box z-1 mt-3 w-52 p-2 shadow">
                        <%- include('nav-menu-items.ejs') %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <section class="container mx-auto flex flex-col gap-y-8 py-8 px-4">
        <header class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
            <div>
                <div class="breadcrumbs text-sm font-semibold">
                    <ul>
                        <li><a href="/mod">Mod Panel</a></li>

                        <% breadcrumbs.forEach(function(crumb) { %>
                        <li>
                            <a href="<%= crumb.link %>"><%= crumb.title %></a>
                        </li>
                        <% }); %>

                        <li class="text-neutral-400"><%= title %></li>
                    </ul>
                </div>

                <h1 class="text-4xl font-bold text-stone-300"><%= title %></h1>
            </div>
        </header>

        <div class="flex flex-col gap-8 lg:flex-row lg:items-start">