<%- include('../_partial/header.ejs', { title: 'Private Conversation' }); %>
<%- include('../_components/frame-top.ejs'); %>
<%- include('../_components/content-start.ejs'); %>
<%- include('../_components/title-box.ejs', { title: 'Private Conversation', links: [ { text: 'Overview', href: '/mod/overview/' + fromAcc.username } ] }); %>

<%- include('../_components/content-body-start.ejs'); %>
<div style="height: 500px; overflow-y: scroll">
    <% for (const pm of pms) { %>
        <div style="text-align: left">
            <strong><a href="/mod/overview/<%= pm.account_id === fromAcc.id ? fromAcc.username : toAcc.username %>"><%= toDisplayName(pm.account_id === fromAcc.id ? fromAcc.username : toAcc.username) %></a></strong>
            ->
            <strong><a href="/mod/overview/<%= pm.to_account_id === toAcc.id ? toAcc.username : fromAcc.username  %>"><%= toDisplayName(pm.to_account_id === toAcc.id ? toAcc.username : fromAcc.username) %></a></strong>

            <span style="float: right">
                <%= pm.timestamp.toISOString().replace("T"," ").substring(0, 19); %>
            </span>

            <br>

            <%= pm.message %>
        </div>
        <hr>
    <% } %>
</div>
<%- include('../_components/content-body-end.ejs'); %>

<%- include('../_components/content-end.ejs'); %>
<%- include('../_partial/footer.ejs'); %>
